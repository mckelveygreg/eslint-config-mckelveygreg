{
  "name": "@mckelveygreg/eslint-config",
  "version": "1.0.3",
  "description": "ESLint and Prettier Config curated by Greg McKelvey",
  "main": "index.js",
  "exports": {
    "./react": "./react.js",
    ".": "./index.js",
    "./prettier.config": "./prettier.config.js"
  },
  "type": "module",
  "author": "Greg McKelvey <mckelveygreg@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/mckelveygreg/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mckelveygreg/eslint-config-mckelveygreg.git"
  },
  "keywords": [
    "typescript",
    "eslint",
    "lint",
    "config",
    "prettier",
    "style guide",
    "react"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "index.js",
    "eslint.config.js",
    "react.js",
    "tsconfig.json",
    "prettier.config.js",
    "*.d.ts"
  ],
  "packageManager": "yarn@4.9.4",
  "peerDependencies": {
    "eslint": ">= 9 || < 10",
    "prettier": ">= 3 || < 4",
    "typescript": ">= 5 || < 6"
  },
  "dependencies": {
    "@eslint/compat": "^2.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "^16.5.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript-eslint": "^8.55.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/eslint": "^9.6.1",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/is-ci": "^3.0.4",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.2.7",
    "markdownlint": "^0.40.0",
    "markdownlint-cli": "^0.47.0",
    "pinst": "^3.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "lint": "yarn eslint --max-warnings=0 --cache --fix \"**/*.{js,ts,jsx,tsx}\"",
    "lint:markdown": "markdownlint --config linters/.markdownlint.json README.md */README.md",
    "postinstall": "is-ci || husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
